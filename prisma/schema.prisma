generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Response {
  id        String    @id @default(uuid())
  title     String
  content   String
  topic     String
  audience  String
  character Character
  length    Length
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Character {
  Marvin
  Arthur
  Zaphod
}

enum Length {
  short
  medium
  long
}
